@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="row justify-content-center">
    <div class="col-lg-6 col-sm-12">
        <div class="card mt-3 shadow text-center">
            <h1>Welcome!</h1>
            <div class="card-body">
            <form method="post" asp-action="ProcessUser" asp-controller="Home" >
                <label>Enter your name!</label>
                <span asp-validation-for="UserName" class="form-text text-danger"></span>
                <input asp-for="UserName" type="text" class="form-control">
                <button type="submit" class="form-control btn btn-primary mt-3">Enter</button>
            </form>
            </div>
        </div>
    </div>
</div>