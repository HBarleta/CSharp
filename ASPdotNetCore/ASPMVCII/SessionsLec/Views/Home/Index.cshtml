@{
    ViewData["Title"] = "Home Page";
}
@model Guest

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card mt-5">
            <div class="card-body">
                <h1>Welcome!</h1>
                <form asp-action="ProcessName" asp-controller="Home" method="POST">
                    <div class="mb-3">
                        <label class="form-label">What is your name?</label>
                        <span class="form-text text-danger" asp-validation-for="GuestName"></span>
                        <input asp-for="GuestName" type="text" class="form-control"/>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">ENTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
