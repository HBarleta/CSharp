@{
    ViewData["Title"] = "Home Page";
}
@model Pet

<h2>Hello! Add a pet to our Project!</h2>
<h3>@ViewBag.SecretMessage</h3>

<form method="POST" asp-controller="Home" asp-action="addPet">
    <label>Name:</label>
    <span asp-validation-for="Name"></span>
    <input  asp-for = "Name">

    <label>Pet Type:</label>
    <span asp-validation-for="PetType"></span>
    <input  asp-for = "PetType">

    <label>Age:</label>
    <span asp-validation-for="Age"></span>
    <input asp-for = "Age">

    <label>Hair Color:</label>
    <span asp-validation-for="HairColor"></span>
    <input  asp-for = "HairColor">
    
    <input type="submit">
</form>
