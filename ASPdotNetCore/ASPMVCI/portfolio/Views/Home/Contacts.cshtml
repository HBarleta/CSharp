@{
    ViewData["Title"] = "Contacts";
}

<div class="container row">

    <h1 class="text-center">Contact Me!</h1>

    <div class="form-control">
        <form >
            <div class="form-group m-3">
                <span>Name:</span>
                <input type="text">
            </div>
            <div class="form-group m-3">
                <span>Email:</span>
                <input type="text">
            </div>
            <div class="form-group m-3">
                <span>Message:</span>
                <textarea class="form-control" rows="3"></textarea>
            </div>
        </form>
    </div>
</div>