@model User

<div class="form-control p-5 m-2 bg-primary rounded text-white shadow">
<h2 class="text-center">Register</h2>
    <form asp-action="Register" asp-controller="User" method="Post">
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="FirstName" class="text-warning font-weight-bold"></span>
            <input asp-for="FirstName" class="col-sm-8 mb-2">
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="LastName" class="text-warning font-weight-bold"></span>
            <input asp-for="LastName" class="col-sm-8 mb-2">
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="Email" class="text-warning font-weight-bold"></span>
            <input asp-for="Email" class="col-sm-8 mb-2">
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="Password" class="text-warning font-weight-bold"></span>
            <input asp-for="Password" class="col-sm-8 mb-2">
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label"></label>
            <span asp-validation-for="ConfirmPassword" class="text-warning font-weight-bold"></span>
            <input asp-for="ConfirmPassword" class="col-sm-6 mb-2">
        </div>
        <button type="submit" class="w-25 my-3 btn btn-outline btn-warning">Register</button>
    </form>
</div>