@{
    ViewData["Title"] = "Add a Dish";
}
@model Dish

<div class="container">
<h1>Add a Dish!</h1>
    <hr>
    <div class="row justify-contents-center">
        <div class="col-sm mt-3">
            <form asp-action="AddDish" asp-controller="Dish" method="POST">
                    <label asp-for="DishName"></label>
                    <span asp-validation-for="DishName"></span>
                    <input asp-for="DishName">
                    <label asp-for="Calories"></label>
                    <span asp-validation-for="Calories"></span>
                    <input asp-for="Calories">
                    @* This will be a list that will drop down to select *@
                    <label asp-for="ChefId"></label>
                    <select asp-for="ChefId">
                        @foreach (Chef c in ViewBag.allChefs)
                        {
                            <option value=@c.ChefId>@c.FirstName @c.LastName</option>
                        }
                    </select>
                    <label asp-for="Tastiness"></label>
                    <span asp-validation-for="Tastiness"></span>
                    <select asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Add Dish</button>
            </form>
        </div>
    </div>
</div>