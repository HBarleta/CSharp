@{
    ViewData["Title"] = "Add a Chef";
}


@model Chef

<div class="container">
    <h1>Add a Chef</h1>
    <hr>
    <div class="row justify-content-center">
        <form class="form-control" asp-action="AddChef" asp-controller="Chef" method="POST">
            <div >
                <label asp-for="FirstName">First Name:</label>
                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName">
                <label asp-for="LastName">Last Name:</label>
                <span asp-validation-for="LastName"></span>
                <input asp-for="LastName">
                <label asp-for="DOB"></label>
                <span asp-validation-for="DOB"></span>
                <input asp-for="DOB" type="date" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                <button type="submit" class="btn btn-primary">Add Chef</button>
            </div>
        </form>
    </div>
</div>